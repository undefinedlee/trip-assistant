$navbar-height = 44px

#comment
	padding: 59px 15px 15px
	.loading
		position: absolute
		width: 100%
		height: 30px
		font: 18px/30px
		text-align: center
		top: 50%
		margin-top: -15px
	.resource-scores
		margin: -15px -15px 0
		padding: 15px
		background-color: #fff
		box-shadow: 0 1px 2px rgba(0, 0, 0, .1)
		li
			line-height: 40px
			font-size: 18px
			color: #ccc
			.score
				margin-left: 10px
	h2
		margin: 20px 0 5px
		color: #555
		font-size: 15px
	.input
	.button
		border-radius: 2px
	.input
		font-size: 14px
	.button
		margin-top: 10px
	.desc
		margin: 0 -15px
		padding: 10px 15px
		background-color: #fff
		border: 0.5px solid #e8e5dd
		border-width: 0.5px 0
		box-shadow: 0 -0.5px 0 #e8e5dd, 0 0.5px 0 #e8e5dd
		p
			font: 14px/24px
			text-indent: 28px
			color: #555
.no-navbar
	#comment
		padding-top: 15px

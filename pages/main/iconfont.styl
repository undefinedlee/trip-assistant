.i-loading
    &:before
        content: " "
        display: inline-block
        width: 16px
        height: 11px
        vertical-align: middle
        background: url('data:image/gif;base64,') no-repeat 50% 50%

@css {
    @keyframes recording{
        0%{
            transform:scaley(1)
        }
        80%{
            transform:scaley(0.3)
        }
        90%{
            transform:scaley(1)
        }
    }
}

.i-recording
    display: -webkit-box
    -webkit-box-pack: justify
    span
        display: block
        width: 2px
        height: 100%
        background-color: currentColor
        animation: recording 0.9s infinite cubic-bezier(0.11, 0.49, 0.38, 0.78)
        &:nth-child(3)
            animation-delay:-.9s
        &:nth-child(2)
        &:nth-child(4)
            animation-delay:-.65s
        &:nth-child(1)
        &:nth-child(5)
            animation-delay:-.4s
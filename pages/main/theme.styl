@import "reset"
@import "iconfont"

.navbar
.subnavbar
.toolbar
	-webkit-backdrop-filter: blur(4px)
.navbar
	background: rgba(66, 38, 89, .95)
	color: #fff
	&:after
		display: none
	a
		color: #fff
.toolbar
	background: rgba(247, 247, 248, 0.95)
.page-content
	background-color: #f5f2ec
.input
	border: 0.5px solid #ccc
	box-shadow: 0.5px 0.5px 0 #ccc, -0.5px -0.5px 0 #ccc
	border-radius: 5px
	box-sizing: border-box
	font-size: 17px
	height: 29px
	line-height: 1
	padding: 5px
	width: 100%
	-webkit-appearance: none
	&.input-big
		height: 42px
		padding: 12px 10px
.button
	&.button-fill
		&.color-orange
			background-color: #f90
		&.color-gray
			background-color: #eee
			color: #555
.infinite-scroll-preloader
	margin: 10px 0
	text-align: center
	.preloader
		width:20px
		height:20px



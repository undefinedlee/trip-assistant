#order-list
	.tours
		margin: 0 15px 0 25px
		padding: 10px 0 10px 15px
		border-left: 3px solid #e8e5dd
		box-sizing: border-box
		&:before
			content: " "
			position: absolute
			left: 25px
			top: 0
			bottom: 0
			width: 3px
			background-color: #e8e5dd
		.tour
			position: relative
			list-style: none
			margin-top: 20px
			&:before
				content: " "
				position: absolute
				width: 9px
				height: 9px
				border: 3px solid #f5f2ec
				background-color: #dad3c6
				border-radius: 8px
				left: -24px
				top: 5px
			.date
				.start
					font-size: 18px
				.count
					margin: 0 5px
					padding: 0 20px
					position: relative
					display: inline-block
					top: 9px
					height: 0
					border-top: 0.5px solid #bbb
					box-shadow: 0 -0.5px 0 #bbb
					em
						position: relative
						font-size: 12px
						top: -10px
						color: #aaa
						background-color: #f5f2ec
						padding: 0 3px
				.back
					position: relative
					top: -2px
					font-size: 12px
					color: #aaa
			.detail
				background-color: #fff
				padding: 10px
				box-shadow: 0 1px 2px rgba(0,0,0,.1)
				border-radius: 2px
				margin-top: 10px
				margin-left: -28px
				.tour-name
					font-size: 14px
				.info
					margin-top: 10px
					display: flex
					span
						flex: 1
						text-align: center
						color: #999
						font-size: 12px
						&:first-child
							text-align: left
						&:last-child
							text-align: right
				.leader
					margin-top: 10px
					padding: 5px
					background-color: #F7F5F2
					height: 40px
					border-radius: 2px
					>span
						float: left
						width: 40px
						height: 40px
						text-align: center
						line-height: 40px
						font-size: 30px
						color: #DAD3C6
					>div
						display: flex
						margin-left: 40px
						>span
							flex: 2
							padding-left: 5px
							span
								display: block
								&:first-child
									font-size: 14px
									line-height: 24px
								&:last-child
									font-size: 12px
									line-height: 16px
									color: #999
						>a
							flex: 1
							border-left: 0.5px solid #e8e5dd
							box-shadow: -0.5px 0 0 #e8e5dd
							text-align: center
							font-size: 24px
							line-height: 40px
							color: #f90

				.actions
					margin: 10px -10px -10px
					border-top: 0.5px solid #e8e5dd
					box-shadow: 0 -0.5px 0 #e8e5dd
					padding: 10px 0
					display: flex
					a
						flex: 1
						text-align: center
						font-size: 14px
						//color: #5d446f
						color: #333
						border-left: 0.5px solid #e8e5dd
						box-shadow: -0.5px 0 0 #e8e5dd
						&:first-child
							border: none
							box-shadow: none
	.loading
		position: absolute
		left: 0
		top: 50%
		width: 100%
		height: 30px
		line-height: 30px
		text-align: center
		color: #666